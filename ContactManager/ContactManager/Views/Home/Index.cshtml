@model IEnumerable<ContactManager.Models.Contact>

@{
    ViewData["Title"] = "Contacts";
}

<a asp-controller="Contacts" asp-action="Create">Add Contact</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var contact in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Contacts" 
                         asp-action="Details" 
                         asp-route-id="@contact.ContactId">@contact.Firstname</a>
                    </td>
                    <td>
                        <a asp-controller="Contacts"
                           asp-action="Details"
                           asp-route-id="@contact.ContactId">@contact.Lastname</a>
                    </td>
                    <td>@contact.Phone</td>
                    <td>@contact.Email</td>
                    <td>@contact.Category.CategoryName</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">No contacts available.</td>
            </tr>
        }
    </tbody>
</table>
